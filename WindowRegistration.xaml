<Window x:Class="ProjectManagmentSystemWPF.WindowRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManagmentSystemWPF"
        mc:Ignorable="d"
        Title="Регистрация" Height="696" Width="458" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="179,22,0,0" TextWrapping="Wrap" Text="Регистрация" VerticalAlignment="Top" FontSize="30"/>
        <TextBlock HorizontalAlignment="Left" Margin="66,93,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="66,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Height="60" Text="Повторить пароль" Width="103"/>
        <TextBlock HorizontalAlignment="Left" Margin="68,520,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Height="33" Text="Роль" Width="77"/>
        <TextBlock HorizontalAlignment="Left" Margin="68,296,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="66,156,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="66,351,0,0" TextWrapping="Wrap" Text="О вас" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="textBoxLogin" HorizontalAlignment="Left" Margin="179,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" FontSize="22" Height="38" MaxLength="15" PreviewTextInput="textBoxLogin_PreviewTextInput"/>
        <PasswordBox x:Name="passwordBoxPass" HorizontalAlignment="Left" Margin="179,159,0,0" VerticalAlignment="Top" Width="240" FontSize="22" Height="38" MaxLength="15"/>
        <PasswordBox x:Name="passwordBoxRepeatPass" HorizontalAlignment="Left" Margin="179,226,0,0" VerticalAlignment="Top" Width="240" FontSize="22" Height="38" MaxLength="15"/>
        <ComboBox x:Name="comboBoxRole" HorizontalAlignment="Left" Margin="177,515,0,0" VerticalAlignment="Top" Width="240" Height="38" FontSize="22"/>
        <TextBox x:Name="textBoxName" HorizontalAlignment="Left" Margin="181,296,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" FontSize="22" Height="38" MaxLength="15"/>
        <TextBox x:Name="textBoxDescription" HorizontalAlignment="Left" Margin="179,351,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="242" FontSize="22" Height="137" MaxLength="100"/>
        <Button x:Name="buttonRegistration" Content="OК" HorizontalAlignment="Center" Margin="0,585,0,0" VerticalAlignment="Top" Width="104" FontSize="20" Click="buttonRegistration_Click" Background="#FFAEFF82"/>
    </Grid>
</Window>