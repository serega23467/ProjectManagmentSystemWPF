        <TextBlock HorizontalAlignment="Left" Margin="59,150,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="46,214,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="235,327,0,0" TextWrapping="Wrap" Text="или" VerticalAlignment="Top" FontSize="20"/>
    </Grid>
</Window>
