        <TextBlock HorizontalAlignment="Left" Margin="182,29,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" FontSize="32"/>
        <TextBox x:Name="textBoxLogin" HorizontalAlignment="Left" Margin="144,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232" FontSize="22" Height="38" Text="MainAdmin"/>
